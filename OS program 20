#include <stdio.h>
#include <pthread.h>
#include <semaphore.h>
#include <unistd.h>

sem_t mutex, wrt;
int readcount = 0;
int data = 0;

void* reader(void* arg){
    int id = (int)(long)arg;
    sem_wait(&mutex);
    readcount++;
    if(readcount==1) sem_wait(&wrt);
    sem_post(&mutex);

    // reading
    printf("Reader %d reads data = %d\n", id, data);
    sleep(1);

    sem_wait(&mutex);
    readcount--;
    if(readcount==0) sem_post(&wrt);
    sem_post(&mutex);
    return NULL;
}

void* writer(void* arg){
    int id = (int)(long)arg;
    sem_wait(&wrt);
    data += id; // write
    printf("Writer %d wrote data = %d\n", id, data);
    sleep(1);
    sem_post(&wrt);
    return NULL;
}

int main(){
    pthread_t r[3], w[2];
    sem_init(&mutex,0,1);
    sem_init(&wrt,0,1);
